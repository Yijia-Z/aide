generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  
}

model UserProfile {
  id             String   @id // 这里可以直接存 Clerk 的 userId
  username       String?  // 允许为空；若为空则后端自动生成
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
